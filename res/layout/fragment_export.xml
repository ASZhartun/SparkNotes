<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/name_zip_archive_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_extra"
        android:text="@string/export_zip_name_title"
        android:textColor="@color/blue"
        android:textSize="@dimen/font_size_content" />

    <EditText
        android:id="@+id/input_zip_name_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="@string/export_zip_name_placeholder"
        android:textSize="@dimen/font_size_title" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/zip_location_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_extra"
        android:text="@string/export_zip_location_title"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/button_locate_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/light"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:text="@string/export_path_sample"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_size_content" />

    <Button
        android:id="@+id/button_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="@string/actionbar_export_button"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_button" />

</LinearLayout>
